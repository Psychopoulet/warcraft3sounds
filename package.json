{

  "name": "warcraft3sounds",
  "version": "0.3.1",
  "description": "A basic API for Warcraft 3 sounds",

  "typings": "./lib/cjs/main.d.cts",
  "main": "./lib/cjs/main.cjs",
  "exports": {
    ".": {
      "require": {
        "types": "./lib/cjs/main.d.cts",
        "default": "./lib/cjs/main.cjs"
      }
    }
  },

  "scripts": {

    "prepare": "npx husky || true",

    "transpile-openapi": "npx openapi-typescript \"./lib/data/descriptor.json\" -o \"./lib/src/descriptor.ts\"",

    "clean-back": "npx rimraf \"./lib/cjs\"",
    "lint-back": "npx eslint --config \".eslintrc-src.js\" --ext .cts,.ts \"./lib/src/**/*\"",
    "build-back": "npm run-script lint-back && npm run-script clean-back && npm run-script transpile-openapi && npx tsc --project \"./tsconfig-back.json\"",

    "clean-front": "npx rimraf \"./public/bundle.js\"",
    "lint-front": "true",
    "build-front": "npm run-script lint-front && npm run-script clean-front && npm run-script transpile-openapi && npx webpack --config \"./webpack.config.js\"",

    "check-requires": "npx used-deps-analyzer \"./package.json\" \"./lib/src\" --no-dev --overkill \"fs-extra\" \"node-promfs\"",
    "check-updates": "npx check-version-modules",
    "lint-tests": "npx eslint --config \".eslintrc-tests.js\" \"./test/**/*.js\"",
    "unit-tests": "npm run-script build-back && npx nyc --reporter=html --reporter=text mocha && npx nyc report --reporter=text-lcov | coveralls",
    "tests": "npm run-script check-requires && npm run-script check-updates && npm run-script lint-tests && npm run-script unit-tests",

    "ci": "npm run-script build-front npm run-script build-back && && npm run-script tests",

    "start": "node \"./lib/cjs/main.cjs\"",

    "daemon-start": "npx pm2 start \"./pm2.json\"",
    "daemon-restart": "npx pm2 reload \"./pm2.json\"",
    "daemon-stop": "npx pm2 stop \"./pm2.json\" && npx pm2 delete \"./pm2.json\""

  },

  "bin": {},
  "files": [
    "/bin",
    "/lib/cjs",
    "/public"
  ],
  "engines": {
    "node": ">=16.0.0"
  },

  "dependencies": {
    "compression": "1.8.1",
    "cors": "2.8.5",
    "express": "5.2.1",
    "express-openapi-validator": "5.6.0",
    "helmet": "8.1.0",
    "node-confmanager": "1.9.0",
    "node-forge": "1.3.3",
    "sqlite3": "5.1.7"
  },
  "devDependencies": {
    "@types/compression": "1.8.1",
    "@types/cors": "2.8.19",
    "@types/express": "5.0.6",
    "@types/node": "25.0.1",
    "@types/node-forge": "1.3.14",
    "@types/react": "19.2.7",
    "@types/react-dom": "19.2.3",
    "check-version-modules": "2.2.0",
    "coveralls": "3.1.1",
    "eslint-plugin-personnallinter": "git+ssh://git@github.com/Psychopoulet/eslint-plugin-personnallinter",
    "husky": "9.1.7",
    "mocha": "11.7.5",
    "nyc": "17.1.0",
    "openapi-typescript": "7.10.1",
    "react": "19.2.3",
    "react-bootstrap-fontawesome": "git+ssh://git@github.com/Psychopoulet/react-bootstrap-fontawesome",
    "react-dom": "19.2.3",
    "rimraf": "6.1.2",
    "terser-webpack-plugin": "5.3.16",
    "ts-loader": "9.5.4",
    "typescript": "5.9.3",
    "used-deps-analyzer": "0.1.8",
    "webpack": "5.103.0",
    "webpack-cli": "6.0.1"
  },
  "optionalDependencies": {
    "pm2": "6.0.14"
  },

  "keywords": [
    "warcraft",
    "sounds",
    "reign of chaos",
    "frozen throne"
  ],
  "author": "SÃ©bastien VIDAL",
  "contributors": [],
  "license": "ISC",
  "homepage": "https://github.com/Psychopoulet/warcraft3sounds#readme",
  "repository": {
    "type": "git",
    "url": "git://github.com/Psychopoulet/warcraft3sounds"
  },
  "bugs": {
    "url": "https://github.com/Psychopoulet/warcraft3sounds/issues"
  }

}
